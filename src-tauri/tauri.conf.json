{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MM",
  "version": "1.0.0",
  "identifier": "com.eleph.mm",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Motivetion Monitor",
        "width": 360,
        "height": 270,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": ["../public/fonts/*"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
